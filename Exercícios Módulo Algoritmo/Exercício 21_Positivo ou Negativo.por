programa
{
	
	funcao inicio()
	{
		escreva("{ EXERCÍCIO 21 - Positivo ou Negativo } \n")

		inteiro n

		escreva("Digite um número: ")
		leia(n)

		se (n > 0){
			escreva("O número " + n + " é positivo.")
			}senao se(n == 0){
				escreva("O número " + n + " é nulo.")
				
			}senao{
				escreva("O número " + n + " é negativo")
			}
			
		

	}
}
